<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/main.css">
	<title> University Societies </title>
</head>

<body>
	<%- include('common/header'); %>
	<div>
		<a href="/societies/add" class="button">
			<h3> Add New Society </h3>
		</a>
		<form method="post" class="form">
			<p> <label for="Soc_Name"> Name: </label> <input name="Soc_Name"> </p>
			<input type="submit" value="Search">
		</form>
		<h1> Societies </h1>
		<section class="dataTable">
			<table class="data">
				<tr>
					<th> Name </th>
					<th> Email </th>
					<th> </th>
				</tr>
					<% societies.forEach(society=> { %>
				<tr>
					<td> <%- society.Soc_Name %> </td>
					<td> <%- society.Soc_Email %> </td>
					<td>
						<a href="/societies/view/<%- society.Soc_ID %>"> View </a>
						<a> - </a>
						<a href="/societies/edit/<%- society.Soc_ID %>"> Edit </a>
						<a> - </a>
						<a href="/societies/delete/<%- society.Soc_ID %>"> Delete </a>
					</td>
				</tr>
					<% }) %>
			</table>
		</section>
	</div>
</body>

</html>